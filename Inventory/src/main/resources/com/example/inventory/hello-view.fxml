<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="189.0" prefWidth="287.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.inventory.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Tool Name" />
   <TextField fx:id="txtName" />
   <Label text="Cost" />
   <TextField fx:id="txtCost" />
   <Label text="Quantity" />
   <TextField fx:id="txtQuantity" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onBtnAddClick" text="Add" />
         <Button fx:id="btnDisplay" mnemonicParsing="false" onAction="#onBtnDisplayClick" text="Display" />
         <Button fx:id="mustOrder" mnemonicParsing="false" onAction="#onBtnOrderClick" text="Must Order" />
      </children>
   </HBox>
   <TextArea fx:id="output" editable="false" prefHeight="200.0" prefWidth="200.0" />
</VBox>
